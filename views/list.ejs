<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form action="/logout" method="post">
        <button type="submit">退出</button>
    </form>

    <h1>记账本</h1>
    <a href="/account/create">添加账单</a>
    <hr>
    <div>

        <% accounts.forEach(item=> { %>
            <div>
                <div>标题：<%= item.title %>
                </div>
                <div>时间：<%= moment(item.time).format('YYYY-MM-DD') %>
                </div>
                <div>类型：<%= item.type===-1 ? '支出' : '收入' %>
                </div>
                <div>金额：<%= item.account %>
                </div>
                <a class="delBtn" href="/account/<%= item._id %>">删除</a>
            </div>



            <% }) %>
    </div>

    <script>
        //  获取删除按钮
        const btns = document.querySelectorAll('.delBtn');

        //  绑定事件
        btns.forEach(item => {
            item.addEventListener('click', function (e) {
                if (confirm('确定删除么？')) {
                    return true
                } else {
                    // 阻止默认行为
                    e.preventDefault();
                }

            })
        })
    </script>
</body>

</html>